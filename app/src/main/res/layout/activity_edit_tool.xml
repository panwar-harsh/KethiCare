<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center"/>

        <!-- Image Picker -->
        <ImageView
            android:id="@+id/toolImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_placeholder"
            android:background="@drawable/image_placeholder_bg"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/toolNameEditText"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:hint="Tool Name"
            android:textStyle="bold"
            android:fontFamily="@font/merriweather_light"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textSize="16sp"/>

        <Spinner
            android:id="@+id/categorySpinner"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="@drawable/spinner_background"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/priceEditText"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:hint="Price"
            android:textStyle="bold"
            android:fontFamily="@font/merriweather_light"
            android:inputType="numberDecimal"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>

        <CheckBox
            android:id="@+id/negotiableCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Negotiable"
            android:fontFamily="@font/lato_bold"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/contactEditText"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:hint="Contact Number"
            android:inputType="phone"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/uploadButton"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:text="Upload Tool"
            android:textSize="18dp"
            android:textAllCaps="false"
            android:fontFamily="@font/merriweather_light"
            android:textStyle="bold"
            android:background="@drawable/profile_edittext_shape"
            android:textColor="@android:color/black"
            android:layout_marginTop="16dp"/>



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:text="Submit"
            android:textSize="24dp"
            android:textAllCaps="false"
            android:fontFamily="@font/merriweather_light"
            android:textStyle="bold"
            android:background="@drawable/next_button_shape"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>
