<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4FBF8">

    <TextView
        android:id="@+id/tv_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What's your plant pot volume?"
        android:textSize="32sp"
        android:textAlignment="center"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/dark_green"
        android:textStyle="bold"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/lato"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvVolumeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10.00L"
        android:textSize="64sp"
        android:fontFamily="@font/lato_bold"
        android:textColor="#07B369"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/tv_question"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayoutVolume"
        android:layout_width="144dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toTopOf="@id/seekBarVolume"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvVolumeValue">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardLiters"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/black">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="L"
                android:textSize="24dp"
                android:layout_gravity="center"
                android:textColor="@color/green" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardGallons"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GAL"
                android:textSize="24dp"
                android:layout_gravity="center"
                android:textColor="@color/green" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <SeekBar
        android:id="@+id/seekBarVolume"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/bg_button_rounded"
        android:max="20"
        android:progress="10"
        app:layout_constraintTop_toBottomOf="@id/linearLayoutVolume"
        app:layout_constraintBottom_toTopOf="@id/btn_next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_next"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Next"
        android:textSize="24sp"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:background="@drawable/next_button_shape"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
